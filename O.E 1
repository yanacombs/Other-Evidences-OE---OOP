class ml_char():
    def __init__(self, char, role, dmg_type):
        self.char = char
        self.role = role
        self.dmg_type = dmg_type

    def emel(self):
        return f"{self.char} is a {self.role} with a {self.dmg_type} power"
    

hero_jnglr = ml_char("Layla", "Assassin", "Attack Damage")
hero_fghtr = ml_char("Diggie", "Fighter", "Magic Damage")
hero_mm = ml_char("Angela", "Marksman", "Attack Damage")
hero_mg = ml_char("Rafaela", "Mage", "Magic Damage")
hero_spprt = ml_char("Bane", "Roam", "Magic Damage")

print(f'''
{hero_jnglr.char}
{hero_jnglr.role}
{hero_jnglr.dmg_type}
{hero_jnglr.emel()}

{hero_fghtr.char}
{hero_fghtr.role}
{hero_fghtr.dmg_type}
{hero_fghtr.emel()}

{hero_mm.char}
{hero_mm.role}
{hero_mm.dmg_type}
{hero_mm.emel()}

{hero_mg.char}
{hero_mg.role}
{hero_mg.dmg_type}
{hero_mg.emel()}

{hero_spprt.char}
{hero_spprt.role}
{hero_spprt.dmg_type}
{hero_spprt.emel()}

''')
